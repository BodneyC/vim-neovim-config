{
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": true,
  "java.contentProvider.preferred": "fernflower",
  "rust-client.rlsPath": "/home/benjc/.cargo/bin/rls",
  "suggest.triggerAfterInsertEnter": false,
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "tslint.jsEnable": true,
  "tslint.autoFixOnSave": true,
  "tslint.packageManager": "npm",
  "coc.source.file.ignoreHidden": false,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextPrefix": "| ",
  "git.enableGutters": true,
  "git.addGBlameToVirtualText": true,
  "git.addGBlameToBufferVar": true,
  "git.virtualTextPrefix": "    | ",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "C", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "kotlin": {
      "command": "/home/benjc/.config/nvim/addit-lang-servers/kotlin-language-server",
      "filetypes": ["kotlin", "kt"]
    },
    "groovy": {
      "command": "java",
      "args": [
        "-jar",
        "~/.config/nvim/addit-lang-servers/groovy-language-server-all.jar"
      ],
      "filetypes": ["groovy"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "markdown": {
      "command": "markdownlint",
      "args": ["--stdin"],
      "filetypes": ["markdown"]
    }
  },
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck"
	},
	"diagnostic-languageserver.linters": {
    "shellcheck": {
      "command": "shellcheck",
      "debounce": 100,
      "args": ["--format=gcc", "-x", "-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "shellcheck",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": 4,
          "security": 3
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning",
        "note": "info"
      }
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "0", "-bn", "-ci", "-sr", "-kp"]
    }
  },
  "explorer.file.showHiddenFiles": true,
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    },
    {
      "name": "buffer",
      "expand": true
    }
  ],
  "explorer.icon.enableNerdfont": true,
  "explorer.file.columns": [
    "selection",
    "clip",
    "diagnosticError",
    "indent",
    "icon",
    "filename",
    "git",
    "size",
    "modified",
    "readonly"
  ],
  "explorer.file.column.git.showIgnored": true,
  "explorer.file.column.filename.width": 50
}
