{
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.source.file.ignoreHidden": false,
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "zsh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "args": [
        "-i",
        "0",
        "-bn",
        "-ci",
        "-sr",
        "-kp"
      ],
      "command": "shfmt"
    }
  },
  "diagnostic-languageserver.linters": {
    "shellcheck": {
      "args": [
        "--format=gcc",
        "-x",
        "-"
      ],
      "command": "shellcheck",
      "debounce": 100,
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "column": 2,
          "endColumn": 2,
          "endLine": 1,
          "line": 1,
          "message": [
            4
          ],
          "security": 3
        }
      ],
      "offsetColumn": 0,
      "offsetLine": 0,
      "securities": {
        "error": "error",
        "note": "info",
        "warning": "warning"
      },
      "sourceName": "shellcheck"
    }
  },
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextPrefix": "| ",
  "diagnostic.warningSign": "",
  // "eslint.enable": false,
  "eslint.autoFixOnSave": false,
  "explorer.autoCollapseChildren": false,
  "explorer.file.child.template": "  [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][readonly] [git | 1] [selection | clip | 1] [linkIcon & 1][link growRight 1 omitCenter 5][size]",
  "explorer.file.column.git.showIgnored": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.sources": [
    {
      "expand": true,
      "name": "file"
    },
    {
      "expand": true,
      "name": "buffer"
    }
  ],
  "git.addGBlameToBufferVar": true,
  "git.addGBlameToVirtualText": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.enableGutters": true,
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.virtualTextPrefix": "    | ",
  "java.contentProvider.preferred": "fernflower",
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "C",
        "objc",
        "objcpp"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      },
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    },
    "dockerfile": {
      "args": [
        "--stdio"
      ],
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ]
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "diagnosticsEnabled": true,
        "gocodeCompletionEnabled": true,
        "lintTool": "golint"
      }
    },
    "groovy": {
      "args": [
        "-jar",
        "/link-home/gitclones/groovy-language-server/build/libs/groovy-language-server.jar"
      ],
      "command": "java",
      "filetypes": [
        "groovy"
      ],
      "settings": {
        "groovy": {
          "classpath": [
            "/link-home/.m2/repository/org/spockframework/spock-core/1.1-groovy-2.4"
          ]
        }
      }
    },
    "kotlin": {
      "command": "/link-home/gitclones/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
      "filetypes": [
        "kotlin"
      ]
    },
    "markdown": {
      "args": [
        "--stdin"
      ],
      "command": "markdownlint",
      "filetypes": [
        "markdown"
      ]
    }
  },
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "rust-client.rlsPath": "/home/benjc/.cargo/bin/rls",
  "suggest.triggerAfterInsertEnter": false
}
