{
  "suggest.triggerAfterInsertEnter": false,
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "configFile": "/home/benjc/.eslintrc.json"
  },
  "coc.source.file.ignoreHidden": false,
  "python.linting.enabled": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "| ",
  "git.enableGutters": true,
  "git.addGlameToVirtualText": true,
  "git.addGlameToBufferVar": true,
  "git.virtualTextPrefix": "    | ",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "C", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "kotlin": {
      "command": "/home/benjc/.config/nvim/addit-lang-servers/kotlin-language-server",
      "filetypes": ["kotlin", "kt"]
    },
    "groovy": {
      "command": "java",
      "args": [
        "-jar",
        "~/.config/nvim/addit-lang-servers/groovy-language-server-all.jar"
      ],
      "filetypes": ["groovy"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "sh": "shellcheck -x"
  }
}
